<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purble_dark</item>
        <item name="colorPrimaryDark">@color/purble</item>
        <item name="colorAccent">@color/purble_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="notes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="notes" parent="AppTheme">
        <item name="colorPrimaryDark">@color/theme_color2</item>
        <item name="colorAccent">@color/theme_color3</item>
        <item name="colorPrimary">@color/theme_color1</item>
    </style>

    <style name="hannen" parent="AppTheme">
        <item name="colorPrimaryDark">@color/theme_color2</item>
        <item name="colorAccent">@color/theme_color3</item>
        <item name="colorPrimary">@color/theme_color1</item>
        <item name="android:textColorPrimary">@color/theme_color3</item>
    </style>

</resources>
